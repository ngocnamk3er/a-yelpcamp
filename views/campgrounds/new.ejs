<% layout('/layouts/boilerplate') %> 
    <h1 class="text-center">New Campground</h1>
    <div class="row">
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" class="needs-validation" novalidate>
                <div class="form-group">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="form-group">
                    <label  class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="form-group">
                    <label  class="form-label" for="price">Price</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="price-label">$</span>
                        </div>
                        <input id="price" name="campground[price]" type="text" class="form-control" placeholder="0.00" aria-label="price-label" aria-describedby="price" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label  class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" name="campground[image]" id="image" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="form-group">
                    <label  class="form-label" for="description">Description</label>
                    <textarea class="form-control" id="description" name="campground[description]" rows="3" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Add campground</button>
                <div class="form-group mt-3">
                    <a href="/campgrounds" class="btn btn-primary">All Campgrounds</a>
                </div>
            </form>
        </div>
    </div>
